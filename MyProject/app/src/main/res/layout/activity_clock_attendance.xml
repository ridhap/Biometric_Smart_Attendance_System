    <TextView
        android:id="@+id/editCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        />

    <Button
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAuth"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle3"
        android:onClick="bucolic"
        android:text="Clock Your Attendance"/>
    <!--        android:onClick="authenticate"-->
    <!--        />-->
    <TextView
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Status: "
        android:id="@+id/tvAuthStatus"
        android:textSize="15dp"

 />
    <Button
        android:id="@+id/btnLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:onClick="logout"
        android:background="@drawable/buttonstylepink"
        android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
        android:drawablePadding="10dp"
        android:text="Logout"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
         />

    <TextView
        android:id="@+id/textview11"
        android:layout_width="wrap_content"
